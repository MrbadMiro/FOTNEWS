<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FOTNEWS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_red</item>
        <item name="colorSecondaryVariant">@color/primary_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_red</item>
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="Theme.FOTNEWS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Theme - Prevents white background flash -->
    <style name="Theme.FOTNEWS.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash_yellow</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:statusBarColor">@color/splash_yellow</item>
    </style>

    <!-- Custom PopupMenu Style for Profile Dropdown -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/dropdown_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonDanger">
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- News Item Styles -->
    <style name="NewsTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NewsCategory">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary_red</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NewsBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="NewsDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Filter Button Styles -->
    <style name="FilterButtonSelected">
        <item name="android:background">@drawable/button_filter_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="FilterButtonUnselected">
        <item name="android:background">@drawable/button_filter</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
