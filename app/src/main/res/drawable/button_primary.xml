<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/primary_red" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add a subtle stroke/border -->
    <stroke
        android:width="1dp"
        android:color="@color/primary_red" />

    <!-- Optional: Add padding -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" />

</shape>
